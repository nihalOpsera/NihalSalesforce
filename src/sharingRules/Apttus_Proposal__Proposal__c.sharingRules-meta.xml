<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>DS_Quote_Share_to_BCA</fullName>
        <accessLevel>Edit</accessLevel>
        <description>Share Quote/Proposal with BCA User</description>
        <label>DS Quote Share to BCA</label>
        <sharedTo>
            <group>DS_BCA_Group</group>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>SWx/CCRE Proposal Read Only,SWx/CCRE Proposal</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>false</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
    <sharingCriteriaRules>
        <fullName>QTC_Approver_Sharing</fullName>
        <accessLevel>Edit</accessLevel>
        <description>Sharing Quotes for QTC portfolios with Approvers for Approval action/access.</description>
        <label>QTC Approver Sharing</label>
        <sharedTo>
            <group>CPQ_QTC_Approvers</group>
        </sharedTo>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>NokiaCPQ_Portfolio__c</field>
            <operation>equals</operation>
            <value>QTC</value>
        </criteriaItems>
        <criteriaItems>
            <field>NokiaCPQ_Portfolio__c</field>
            <operation>equals</operation>
            <value>IP Routing</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>false</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
</SharingRules>
