<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Avoid_Creating_OIF_on_PSRO</fullName>
    <active>true</active>
    <description>Avoid_Creating_OIF_on_PSRO (SF ticket :: 8510, 25/12/2017)</description>
    <errorConditionFormula>AND( ISCHANGED(OIF_Lines__c),
OR( $RecordType.Name = &quot;Pre_Sales_Risk_Opportunity&quot;,
$RecordType.Name = &quot;Pre_Sales_Risk_Opportunity_read_only&quot;))</errorConditionFormula>
    <errorMessage>Can&apos;t Create the OIF on Pre-sales Opportunity.</errorMessage>
</ValidationRule>
