<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PRM_DOD_Decision_Restriction</fullName>
    <active>true</active>
    <description>SFPRM-507</description>
    <errorConditionFormula>AND(
				ISPICKVAL(PRIORVALUE(PRMDeal_Origination_Discount_Status__c), &apos;Approved with DOD Deferred&apos;),
				ISCHANGED(PRMDeal_Origination_Discount_Status__c),
				ISBLANK(Deal_Registration__c)
)</errorConditionFormula>
    <errorDisplayField>PRMDeal_Origination_Discount_Status__c</errorDisplayField>
    <errorMessage>Deal Registration # must be populated before editing DOD Status.</errorMessage>
</ValidationRule>
