<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PSR_Trial_Date_Greater_Than_Planned_Date</fullName>
    <active>true</active>
    <description>Pre Sales Sprint 7 Defect : 2807</description>
    <errorConditionFormula>AND(
$RecordType.DeveloperName = &apos;Pre_Sales_Risk_Opportunity&apos;, 
OR(ISNEW(), ISCHANGED(PSR_Trial_Start_Date__c)), 
PSR_Trial_Start_Date__c &lt; CloseDate,
$Profile.Name&lt;&gt;$Label.Data_Loader_Profile_Name)</errorConditionFormula>
    <errorMessage>Trial Start Date cannot be before the Planned and Actual Date</errorMessage>
</ValidationRule>
