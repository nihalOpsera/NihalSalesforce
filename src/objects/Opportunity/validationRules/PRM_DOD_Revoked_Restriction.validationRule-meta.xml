<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PRM_DOD_Revoked_Restriction</fullName>
    <active>true</active>
    <description>SFPRM-506</description>
    <errorConditionFormula>AND(
				 NOT(ISPICKVAL(PRIORVALUE(PRMDeal_Origination_Discount_Status__c), &apos;Approved with DOD&apos;)),
				 ISCHANGED(PRMDeal_Origination_Discount_Status__c),
				 ISPICKVAL(PRMDeal_Origination_Discount_Status__c, &apos;DOD Revoked&apos;)
)</errorConditionFormula>
    <errorDisplayField>PRMDeal_Origination_Discount_Status__c</errorDisplayField>
    <errorMessage>Previous status must be Approved with DOD in order to Revoke DOD.</errorMessage>
</ValidationRule>
