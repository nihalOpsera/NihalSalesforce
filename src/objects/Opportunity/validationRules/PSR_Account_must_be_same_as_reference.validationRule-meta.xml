<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PSR_Account_must_be_same_as_reference</fullName>
    <active>true</active>
    <description>PreSales  &gt; Sprint 10 &gt;updated as per latest request</description>
    <errorConditionFormula>AND(
ISNEW(), 
OR(
$RecordType.DeveloperName = &apos;Pre_Sales_Risk_Opportunity_read_only&apos; , 
$RecordType.DeveloperName = &apos;Pre_Sales_Risk_Opportunity&apos;), 
NOT(ISBLANK(PSR_Reference_Opportunity__r.Account.Id)), 
Account.Id &lt;&gt; PSR_Reference_Opportunity__r.Account.Id , 
$Profile.Name &lt;&gt; $Label.Data_Loader_Profile_Name 
)</errorConditionFormula>
    <errorMessage>The Account associated to the Pre-Sales Risk Opportunity needs to be the same Account associated to the Reference Sales Opportunity.</errorMessage>
</ValidationRule>
