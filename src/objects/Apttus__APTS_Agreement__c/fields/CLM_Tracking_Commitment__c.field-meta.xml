    <label>Commitment tracking</label>
    <required>false</required>
    <trackFeedHistory>false</trackFeedHistory>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Picklist</type>
    <valueSet>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Catalogue-based pricing</fullName>
                <default>false</default>
                <label>Catalogue-based pricing</label>
            </value>
            <value>
                <fullName>Value w/o scope</fullName>
                <default>false</default>
                <label>Value w/o scope</label>
            </value>
            <value>
                <fullName>Quantity roll-out</fullName>
                <default>true</default>
                <label>Quantity roll-out</label>
            </value>
            <value>
                <fullName>Condition-based discount pricing</fullName>
                <default>false</default>
                <label>Condition-based discount pricing</label>
            </value>
        </valueSetDefinition>
    </valueSet>
</CustomField>
