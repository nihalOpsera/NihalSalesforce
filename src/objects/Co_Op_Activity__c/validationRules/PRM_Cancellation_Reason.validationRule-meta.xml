<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PRM_Cancellation_Reason</fullName>
    <active>true</active>
    <description>SFPRM-282</description>
    <errorConditionFormula>AND(
				ISPICKVAL(Activity_Status__c, &apos;Cancelled&apos;),
				ISPICKVAL(PRM_Cancellation_Reason__c, &apos;&apos;)
)</errorConditionFormula>
    <errorDisplayField>PRM_Cancellation_Reason__c</errorDisplayField>
    <errorMessage>Please enter the &apos;Cancellation Reason&apos; before cancelling the activity.</errorMessage>
</ValidationRule>
