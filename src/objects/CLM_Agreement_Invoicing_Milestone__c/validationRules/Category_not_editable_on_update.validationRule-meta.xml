<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Category_not_editable_on_update</fullName>
    <active>true</active>
    <description>On update a record, Category picklist value cannot be changed!</description>
    <errorConditionFormula>AND(
				NOT(ISNEW()),
				ISCHANGED(Category__c),
				NOT(ISBLANK(PRIORVALUE(Category__c)))
)</errorConditionFormula>
    <errorDisplayField>Category__c</errorDisplayField>
    <errorMessage>Category picklist value cannot be changed!</errorMessage>
</ValidationRule>
