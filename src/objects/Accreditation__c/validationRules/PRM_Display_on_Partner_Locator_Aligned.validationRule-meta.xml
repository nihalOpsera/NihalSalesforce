<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PRM_Display_on_Partner_Locator_Aligned</fullName>
    <active>true</active>
    <description>SFPRM-492</description>
    <errorConditionFormula>AND(
				ISPICKVAL(PRM_Display_on_Partner_Locator__c, &apos;Yes&apos;),
				NOT(ISPICKVAL(Partner__r.Co_op_Account_Created__c, &apos;Yes&apos;))
)</errorConditionFormula>
    <errorDisplayField>PRM_Display_on_Partner_Locator__c</errorDisplayField>
    <errorMessage>You can only select &apos;Yes&apos; if Display on Partner Locator on the Account is set to &apos;Yes&apos;.</errorMessage>
</ValidationRule>
