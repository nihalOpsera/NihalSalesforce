<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mendatory_Justifcation_for_Critical_Prio</fullName>
    <active>true</active>
    <description>If Priority is &quot;Critical&quot; then the Justification for Critical Priority is Mandatory.</description>
    <errorConditionFormula>AND(
RecordType.Name = &apos;Partner Support&apos;,
ISPICKVAL(Priority, &apos;Critical&apos;),
ISBLANK(Justification_for_Critical_Priority__c)
)</errorConditionFormula>
    <errorDisplayField>Justification_for_Critical_Priority__c</errorDisplayField>
    <errorMessage>Provide Justification for Critical Priority.</errorMessage>
</ValidationRule>
