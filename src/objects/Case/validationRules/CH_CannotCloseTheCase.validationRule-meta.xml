<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CH_CannotCloseTheCase</fullName>
    <active>true</active>
    <errorConditionFormula>AND(CH_RecordTypeCheck__c, ISPICKVAL(Status,&quot;Closed&quot;), CH_SuspectedDataBreach__c)</errorConditionFormula>
    <errorMessage>You cannot close a Case that&apos;s involved in a suspected data breach</errorMessage>
</ValidationRule>
