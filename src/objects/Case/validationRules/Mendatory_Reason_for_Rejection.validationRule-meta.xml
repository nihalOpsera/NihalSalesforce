<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Mendatory_Reason_for_Rejection</fullName>
    <active>true</active>
    <description>If Status is &quot;Rejected&quot; then the Reason for Rejection is Mandatory.</description>
    <errorConditionFormula>AND(
RecordType.Name = &apos;Partner Support&apos;,
ISPICKVAL(Status, &apos;Rejected&apos;),
ISBLANK(CH_ReasonForRejection__c) 
)</errorConditionFormula>
    <errorDisplayField>CH_ReasonForRejection__c</errorDisplayField>
    <errorMessage>Provide the reason for Rejection.</errorMessage>
</ValidationRule>
