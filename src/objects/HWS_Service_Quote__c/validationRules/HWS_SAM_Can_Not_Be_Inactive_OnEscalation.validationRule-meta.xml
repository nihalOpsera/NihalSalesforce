<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HWS_SAM_Can_Not_Be_Inactive_OnEscalation</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(HWS_Escalated_Date__c) &amp;&amp; 
NOT(ISBLANK(HWS_Escalated_Date__c)) &amp;&amp; NOT(ISBLANK(HWS_Escalation_Manager__c)) &amp;&amp;  HWS_Escalation_Manager__r.IsActive = false</errorConditionFormula>
    <errorMessage>It seems the Escalation Manager user is inactive, SRM would not be able to send an escalation email</errorMessage>
</ValidationRule>
