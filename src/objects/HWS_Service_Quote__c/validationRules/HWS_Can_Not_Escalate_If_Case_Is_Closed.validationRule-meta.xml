<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HWS_Can_Not_Escalate_If_Case_Is_Closed</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED(HWS_Escalated_Date__c) &amp;&amp;  NOT(ISBLANK(HWS_Escalated_Date__c)) &amp;&amp; TEXT(HWS_Support_Ticket__r.Status)  = &apos;Closed&apos;</errorConditionFormula>
    <errorMessage>Action Not allowed once RMA is closed</errorMessage>
</ValidationRule>
