<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HWS_ValidateSoldToAccount</fullName>
    <active>true</active>
    <description>Developed for NOKIASC-37155</description>
    <errorConditionFormula>(TEXT(HWS_Account__r.Country__c) != HWS_ServiceContract__r.CH_CountryName__c) 
    &amp;&amp;  
    (HWS_ServiceContract__r.HWS_Retrofit_Type__c == &apos;Local Retrofit&apos;)</errorConditionFormula>
    <errorDisplayField>HWS_Account__c</errorDisplayField>
    <errorMessage>Country of the Sold To Account must match the country listed on the Service Contract.</errorMessage>
</ValidationRule>
