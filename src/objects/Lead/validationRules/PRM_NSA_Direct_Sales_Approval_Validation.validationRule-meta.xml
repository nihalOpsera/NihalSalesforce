<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PRM_NSA_Direct_Sales_Approval_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
not(Direct_Sales_Approver__r.NSA_Compliant__c = True), 
ISPICKVAL(PartnerAccount.Customer_Compliance__c, &apos;US_Govern&apos;))</errorConditionFormula>
    <errorDisplayField>Direct_Sales_Approver__c</errorDisplayField>
    <errorMessage>Direct sales approval should be NSA Compliant</errorMessage>
</ValidationRule>
