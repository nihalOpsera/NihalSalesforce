<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Lead_Rejection_Reason_Other</fullName>
    <active>true</active>
    <description>Deal Reg Req #2763</description>
    <errorConditionFormula>AND( 
$Profile.Name != &apos;Data Loader Profile&apos;, 
NOT(ISPICKVAL(Rejection_Reason__c, &apos;Other&apos;)), 
NOT(ISBLANK(Other_Rejection_Reason__c )))</errorConditionFormula>
    <errorDisplayField>Other_Rejection_Reason__c</errorDisplayField>
    <errorMessage>This field only allow to enter the Rejection Reason when you select &quot;Other&quot; in Rejection Reason field</errorMessage>
</ValidationRule>
