<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>users_can_only_select_inactive</fullName>
    <active>true</active>
    <description>users can only select &apos;Inactive&apos; from the User Create Status picklist field. Exclude Integration Profile</description>
    <errorConditionFormula>AND(NOT(OR(($Profile.Name = $Label.System_Admin_Profile),($Profile.Name  =  $Label.Integration_Profile ))),NOT(ISPICKVAL(User_Create_Status__c, &apos;Inactive&apos;)),ISCHANGED(User_Create_Status__c) )</errorConditionFormula>
    <errorDisplayField>User_Create_Status__c</errorDisplayField>
    <errorMessage>You are not allowed to select this value.</errorMessage>
</ValidationRule>
