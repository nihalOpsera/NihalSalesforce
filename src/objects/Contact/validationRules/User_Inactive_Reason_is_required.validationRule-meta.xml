<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>User_Inactive_Reason_is_required</fullName>
    <active>true</active>
    <description>User Inactive Reason required when User Create Status = Inactive. Exclude Integration Profile</description>
    <errorConditionFormula>AND(OR($Profile.Name &lt;&gt; $Label.Integration_Profile ,$Profile.Name &lt;&gt; $Label.System_Admin_Profile ),(ISPICKVAL(User_Create_Status__c, &apos;Inactive&apos;)),(ISPICKVAL(User_Inactive_Reason__c, &quot;&quot;)))</errorConditionFormula>
    <errorDisplayField>User_Inactive_Reason__c</errorDisplayField>
    <errorMessage>Please enter user inactive reason</errorMessage>
</ValidationRule>
