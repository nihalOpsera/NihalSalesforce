<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Release_Additional_Claim_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>ISNEW() &amp;&amp;Release_Claim__c &amp;&amp; ((Text(Activity_Number__r.Activity_Status__c) ==&apos;Expired&apos; || 
Text(Activity_Number__r.Activity_Status__c) ==&apos;Cancelled&apos; || 
Activity_Number__r.Activity_Approved_Amount__c &lt;= Activity_Number__r.Claims_Submitted_Amount__c ))</errorConditionFormula>
    <errorMessage>NOTE: Additional claims may not be released for an activity with a status of &apos;Expired&apos;, &apos;Cancelled&apos;, or where the activity&apos;s approved amount has been claimed, or reimbursed.</errorMessage>
</ValidationRule>
