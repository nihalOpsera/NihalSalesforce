<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>HFLOF_amount_validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Claim_Status__c,&apos;Submitted&apos;),
				Activity_Claim_Amount__c &gt; Current_Balance__c)</errorConditionFormula>
    <errorMessage>The claim cannot exceed the available balance.</errorMessage>
</ValidationRule>
