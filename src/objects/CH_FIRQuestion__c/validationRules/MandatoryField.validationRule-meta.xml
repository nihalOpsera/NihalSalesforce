<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>MandatoryField</fullName>
    <active>true</active>
    <errorConditionFormula>(ISPICKVAL(Mandatory__c, &apos;Picklist&apos;) || ISPICKVAL(Mandatory__c, &apos;Picklist and Answer&apos;)) &amp;&amp; ISBLANK(PicklistValues__c)</errorConditionFormula>
    <errorMessage>Picklist cannot be mandatory if no values are available</errorMessage>
</ValidationRule>
